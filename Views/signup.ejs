<div class="container  mt-3  col-4 offset-4">
    <div class="card ">
        <div class="card-body">
            <h2 class="card-title text-center">Sign Up</h5>
                <form method="POST" action="/signup">
                    <div>
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div>
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required />
                    </div>
                    <div>
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required />
                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" class="btn btn-block btn-primary btn-outline" value="Sign Up">
                        <a type="submit" href="/login" class="btn btn-block btn-success btn-outline">Log In</a>
                    </div>
                </form>
        </div>
    </div>

</div>