<%- include("header") -%>
<%- include("navbar") -%>
<div class="container  mt-3  col-4 offset-4">
    <div class="card ">
        <div class="card-body">
            <h2 class="card-title text-center">Add Profile</h5>
                <form method="POST" action="/profile">
                    <div>
                        <label for="name" class="form-label">Summoner Name</label>
                        <input type="text" class="form-control" id="name" name="name" required />
                    </div>
                    <div>
                        <label for="rank" class="form-label">Rank</label>
                        <input type="text" class="form-control" id="rank" name="rank" required />
                    </div>
                    <div>
                        <label for="wins" class="form-label">Wins</label>
                        <input type="number" class="form-control" id="wins" name="wins" required />
                    </div>
                    <div>
                        <label for="champion" class="form-label">Champion</label>
                        <input type="text" class="form-control" id="champion" name="champion" required />

                    </div>
                    <div class="d-grid gap-2 mt-4">
                        <input type="submit" class="btn btn-block btn-primary" value="Save Profile"></input>
                    </div>
                </form>
        </div>
    </div>

</div>
<%- include("footer") -%>